<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".man_hinh_thong_tin">

    <RelativeLayout
        android:id="@+id/img_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="81dp">

        <ImageView
            android:id="@+id/ic_back_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_back_view" />

        <TextView
            android:id="@+id/text_qg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="300dp"
            android:text="QUỐC GIA:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_qk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="350dp"
            android:text="QUỐC KỲ:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="400dp"
            android:text="THỦ ĐÔ:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_qg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="450dp"
            android:text="DIỆN TÍCH:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_kh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="500dp"
            android:text="KHÍ HẬU:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="550dp"
            android:text="DÂN SỐ:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_gt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="600dp"
            android:text="GIỚI THIỆU:"
            android:textColor="#3088ba"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgshow"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/anh" />
    </RelativeLayout>


</RelativeLayout>