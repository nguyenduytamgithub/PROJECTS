<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3E3E5"
    android:subtitleTextColor="@color/colorPrimaryDark">
    <!--android:background="@color/colorPrimaryDark"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:scaleType="fitXY"
        android:src="@drawable/nenedit" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/titletwocolor"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@drawable/title2" />
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#0000"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/logoconvert" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/titletwocolor"
            android:text="Cài đặt wifi thùng gạo"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="120dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/chucnang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="G-Box - Thùng gạo IoT"
            android:textColor="#eee"
            android:layout_marginLeft="120dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:background="#0000"
        android:id="@+id/relativekhungtrungtam">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/khung2"
            android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_centerInParent="true">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/ssid_title"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/ap_ssid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ap_password_edit"
            android:layout_alignLeft="@+id/ap_password_edit"
            android:layout_alignStart="@+id/ap_password_edit"
            android:textColor="@color/colorPrimaryDark"
            android:singleLine="true"
            android:textSize="18sp"
            android:textAppearance="?android:attr/textAppearanceMedium" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/password_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2" />

        <EditText
            android:id="@+id/ap_password_edit"
            android:layout_width="match_parent"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignBottom="@+id/textView2"
            android:singleLine="true" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/ap_password_edit"
            android:layout_marginTop="20dp">
        <ImageButton
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#0000"
            android:scaleType="fitXY"
            android:src="@drawable/button2"
            android:id="@+id/button_submit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="KẾT NỐI"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:background="#0000"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"

            android:src="@drawable/home" />

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RelativeLayout>

</RelativeLayout>